<h1><%= @doctor.name %></h1>
<p><%= @doctor.department%></p>

<h2>Appointments</h2>

<% @doctor.appointments.each do |appt| %>
  <label>Patient:</label> <%= link_to appt.patient.name, patient_path(appt.patient) %>
  <br>
  <label>Date Time:</label> <%= appt.appointment_datetime.strftime("%B %-d, %Y at  %k:%M") %>
  <br>
  <label>Date:</label> <%= appt.appointment_datetime.strftime("%b %-d %Y") %>
  <br>
  <label>Time:</label> <%= appt.appointment_datetime.strftime("%H:%M") %>
  <br>
<% end %>
