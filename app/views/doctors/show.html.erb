<h3> <%= @doctor.name %> (<%= @doctor.department %>) appointments </h3>

<ul>
  <% @doctor.appointments.each do |appointment| %>
  <li>
  <%= appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M') %> / Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient.id) %>
  </li>
  <% end %>
</ul>
