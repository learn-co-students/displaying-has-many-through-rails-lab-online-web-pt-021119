<h1>Dr. <%= @doctor.name %></h1>

<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments:</h3>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>
      <p>
        <%= link_to appointment.patient.name, patient_path(appointment.patient.id) %>, <%= appointment.time %>
      </p>
    </li>
  <% end %>
</ul>
