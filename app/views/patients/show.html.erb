<h1>Patient: <%= @patient.name %></h1>

<ul>
  <% @patient.appointments.each do |appt| %>
    <li><%= link_to "Appointment:", appointment_path(appt)%> <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M")%>
      with Doctor: <%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
  <% end %>
</ul>
